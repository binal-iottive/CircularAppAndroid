<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:layout_marginTop="10dp"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="5">
        <LinearLayout
            android:id="@+id/ll_dots"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="5.03"
            android:visibility="gone">
            <ImageView
                android:id="@+id/iv_dot4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_alignParentRight="true"
                android:src="@drawable/dots_4"
                android:padding="18dp"
                android:background="@color/colorDisabledButton"/>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.01"
                android:background="@color/white"/>
            <ImageView
                android:id="@+id/iv_dot3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_alignParentRight="true"
                android:src="@drawable/dots_3"
                android:padding="18dp"
                android:background="@color/colorDisabledButton"/>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.01"
                android:background="@color/white"/>
            <ImageView
                android:id="@+id/iv_dot2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_alignParentRight="true"
                android:src="@drawable/dots_2"
                android:padding="18dp"
                android:background="@color/colorDisabledButton"/>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.01"
                android:background="@color/white"/>
            <ImageView
                android:id="@+id/iv_dot1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_alignParentRight="true"
                android:src="@drawable/dots_1"
                android:padding="18dp"
                android:background="@color/colorDisabledButton"/>
            <ImageView
                android:id="@+id/iv_dotClose"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_alignParentRight="true"
                android:src="@drawable/close_grey"
                android:padding="18dp"
                android:background="@color/white"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/phone_call"
            android:layout_gravity="center"/>
        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/colorDivider"/>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:padding="10dp">
            <TextView
                android:id="@+id/tvAlertType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone call"
                android:textSize="18sp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="45dp"
                android:textColor="@color/colorAccent"
                android:fontFamily="@font/roboto_medium"/>
            <TextView
                android:id="@+id/tvAlertFrom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="From John"
                android:textSize="13sp"
                android:layout_marginLeft="5dp"
                android:textColor="#364249"
                android:layout_below="@+id/tvAlertType"
                android:layout_marginRight="45dp"
                android:singleLine="true"
                android:fontFamily="@font/roboto_regular"/>
            <ImageView
                android:id="@+id/ivDeleteAlert"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/garbage"
                android:layout_alignParentRight="true"
                android:padding="5dp"
                android:layout_marginRight="5dp"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <ImageView
            android:id="@+id/iv_repeat"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_alignParentRight="true"
            android:src="@drawable/dots_1"
            android:padding="20dp"
            android:background="@color/colorOrange"/>
    </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>