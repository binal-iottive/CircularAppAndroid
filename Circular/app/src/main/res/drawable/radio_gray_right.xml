<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorDisabledButton"/>
            <corners android:topRightRadius="15dp" android:bottomRightRadius="15dp"/>
        </shape>
    </item>
    <item android:top="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#00000000"/>
            <corners android:topRightRadius="15dp" android:bottomRightRadius="15dp"/>
            <stroke android:width="1dp" android:color="@color/colorDisabledButton"/>
        </shape>
    </item>
</selector>
