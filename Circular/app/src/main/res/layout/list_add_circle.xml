<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorGrayBG"
    android:padding="20dp">

    <ImageView
        android:id="@+id/imgAddCircleIcon"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="false"
        android:layout_centerVertical="true"
        android:layout_marginEnd="20dp"
        android:contentDescription="@string/logo" />

    <TextView
        android:id="@+id/txtAddCircleTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="10dp"
        android:layout_toEndOf="@id/imgAddCircleIcon"
        android:textColor="@color/colorBlack"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/txtAddCircleDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtAddCircleTitle"
        android:layout_toEndOf="@id/imgAddCircleIcon"
        android:textColor="@color/colorTextGray" />

    <ToggleButton
        android:id="@+id/btnAddCircleToggle"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/txtAddCircleTitle"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:checked="true"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:padding="0dp"
        android:textColor="@color/colorTextGray"
        android:textSize="14sp" />

</RelativeLayout>